{
    "compilerOptions": {
        "outDir": "./built",
        "target": "es6",
        "lib": ["esnext", "es2018"],
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"]
}
